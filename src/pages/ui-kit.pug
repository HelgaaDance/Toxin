include ../componets/input/input
include ../componets/headline/headline
include ../componets/radio-buttons/radio-buttons
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title UI Kit
    link(rel="stylesheet", href="ui-kit.css")
  body
    main(class="main")
      div.column
        +input('email')
        +input('text')
        select(name="guests", id="guests")
          option(disabled, selected) Сколько гостей
          option(value="1") 1 гость
          option(value="2") 2 гостя
          option(value="3") 3 гостя
          option(value="4") 4 гостя
          option(value="5") 5 гостей
          option(value="more") 6 и более
      div.column 
        +h1('This is the main widget title')
        +h2('This is an item title')
        +h3('This is a label')
        +body('This is the body text which is used for most of the design, like paragraphs, lists, etc.')
        form
          .radio-container
            +radioButton('gender', 'male', 'Мужчина')
            +radioButton('gender', 'female', 'Женщина')
      div.column